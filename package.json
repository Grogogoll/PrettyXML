{
    "name": "prettyxml",
    "displayName": "Pretty XML",
    "description": "Visual Studio like formatting of XML.",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.47.0"
    },
    "categories": [
        "Formatters"
    ],
    "activationEvents": [
        "onCommand:prettyxml.prettifyxml",
        "onLanguage:xml"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "prettyxml.prettifyxml",
                "title": "Prettify XML"
            }
        ],
        "keybindings": [
            {
                "command": "prettyxml.prettifyxml",
                "key": "ctrl+p f"
            }
        ],
        "languages": [
            {
                "id": "xml",
                "extensions": [
                    ".config",
                    ".csproj",
                    ".xml",
                    ".xsd",
                    ".xsl",
                    ".plist",
                    ".mobileconfig",
                    ".xaml",
                    ".axml",
                    ".resx"
                ]
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "prettyxml.prettifyxml",
                    "group": "1_modification@100",
                    "when": "editorLangId == 'xml'"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "yarn run compile",
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts",
        "watch": "tsc -watch -p ./",
        "pretest": "yarn run compile && yarn run lint",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.0.0",
        "@types/node": "^14.0.27",
        "@types/vscode": "^1.47.0",
        "@typescript-eslint/eslint-plugin": "^3.8.0",
        "@typescript-eslint/parser": "^3.8.0",
        "eslint": "^7.6.0",
        "glob": "^7.1.6",
        "mocha": "^8.0.1",
        "typescript": "^3.8.3",
        "vscode-test": "^1.4.0"
    },
    "dependencies": {
        "electron-edge-js": "^12.14.2"
    }
}
